package classes_and_objects;

class Calcc{
	int __num1;
	int __num2;
	int __result;
	
	public int perform(int extra, int prod){ // this is a method
		__result = (__num1 + __num2)*prod;
	}
}

public class Constructor {
	public static void main(String[] args) {
		Calcc obj = new Calcc(); // constructor
		
		obj.__num1 = 3;
		obj.__num2 = 5;
		
		obj.perform();
	}
}
