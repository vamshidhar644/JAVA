package anonymous;

class A{
	public void show() {
		System.out.println("In A show()");
	}
}

// the only purpose of this class is to override the method in class A
class B extends A{
	public void show() {
	}
}
public class Anonymous {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		A obj = new A() {
			public void show() {

				System.out.println("I am the best");
			}
		};
		obj.show();
	}

}
